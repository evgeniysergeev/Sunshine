{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build project",
      "type": "cppbuild",
      "command": "mingw32-make",
      "args": [
        "-j${env:NUMBER_OF_PROCESSORS}",
        "all"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\build"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Build project",
    }
  ]
}
